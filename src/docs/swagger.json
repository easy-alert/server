  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "ServerMessage": {
        "description": "Mensagem de erro padrão do backend.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "ServerMessage": {
                  "properties": {
                    "statusCode": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/permission/list": {
      "get": {
        "tags": ["Backoffice | Permissions"],
        "summary": "Lista todas as permissões.",
        "security": [
          {
            "bearerAuth": []
          }
        ],

        "responses": {
          "200": {
            "description": "Retorna as permissões encontradas.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/auth/backoffice/login": {
      "post": {
        "tags": ["Backoffice | Auth"],
        "summary": "Login do usuário no backoffice.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "default": "admin@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "default": 123123123
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "Retorna as informações do usuário e um token válido.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "image": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/companies/create": {
      "post": {
        "tags": ["Backoffice | Companies"],
        "summary": "Cria um novo usuário.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "default": "Carlos Pasquali"
                  },
                  "email": {
                    "type": "string",
                    "default": "carlosdpasqualip@hotmail.com"
                  },
                  "password": {
                    "type": "string",
                    "default": 123123123
                  },
                  "companyName": {
                    "type": "string",
                    "default": "Ada lovelace"
                  },
                  "CNPJ": {
                    "type": "string",
                    "default": "28060992000161"
                  },
                  "CPF": {
                    "type": "string",
                    "default": "12365172024"
                  },
                  "contactNumber": {
                    "type": "string",
                    "default": "48996345409"
                  },
                  "image": {
                    "type": "string",
                    "default": "larguei.s3.us-west-2.amazonaws.com/favicon%201-1661888030888.png"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "201": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/companies/change/isBlocked": {
      "put": {
        "tags": ["Backoffice | Companies"],
        "summary": "Altera o status da empresa (Bloqueado/Ativo).",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "companyId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/companies/delete": {
      "delete": {
        "tags": ["Backoffice | Companies"],
        "summary": "Deleta a empresa e todas informações atreladas a ela.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "companyId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/companies/edit": {
      "put": {
        "tags": ["Backoffice | Companies"],
        "summary": "Edita as informações do usuário e empresa.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  },

                  "name": {
                    "type": "string",
                    "default": "Carlos Pasquali"
                  },
                  "email": {
                    "type": "string",
                    "default": "carlosdpasqualip@hotmail.com"
                  },
                  "password": {
                    "type": "string",
                    "default": 123123123
                  },
                  "companyId": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string",
                    "default": "larguei.s3.us-west-2.amazonaws.com/favicon%201-1661888030888.png"
                  },
                  "companyName": {
                    "type": "string",
                    "default": "Ada lovelace"
                  },
                  "CNPJ": {
                    "type": "string",
                    "default": "28060992000161"
                  },
                  "CPF": {
                    "type": "string",
                    "default": "12365172024"
                  },
                  "contactNumber": {
                    "type": "string",
                    "default": "48996345409"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/backoffice/companies/list": {
      "get": {
        "tags": ["Backoffice | Companies"],
        "summary": "Lista todas as empresas",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "example": "1",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],

        "responses": {
          "200": {
            "description": "Retorna as empresas encontradas.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "contactNumber": {
                        "type": "string"
                      },
                      "CNPJ": {
                        "type": "string"
                      },
                      "CPF": {
                        "type": "string"
                      },
                      "isBlocked": {
                        "type": "boolean"
                      },
                      "UserCompanies": {
                        "type": "array",
                        "items": {
                          "properties": {
                            "User": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                },
                                "name": {
                                  "type": "string"
                                },
                                "email": {
                                  "type": "string"
                                },
                                "lastAccess": {
                                  "type": "string",
                                  "format": "date-time"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },
