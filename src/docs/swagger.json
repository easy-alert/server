      }
    },
    "/backoffice/categories/edit": {
      "put": {
        "tags": ["Backoffice | Categories"],
        "summary": "edita uma categoria.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categoryId": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string",
                    "default": "Sistema hidrossanitário Atualizado"
