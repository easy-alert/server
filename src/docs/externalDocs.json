{
  "openapi": "3.0.0",
  "info": {
    "title": "Easy Alert",
    "description": "API EasyAlert.",
    "version": "1.0.0"
  },

  "servers": [
    {
      "url": "http://localhost:8080/api/external"
    }
  ],

  "components": {
    "responses": {
      "ServerMessage": {
        "description": "Mensagem de erro padrão do backend.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "ServerMessage": {
                  "properties": {
                    "statusCode": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "paths": {
    "/maintenances/countexpired/{buildingId}": {
      "get": {
        "tags": ["Manutenções"],
        "summary": "Retorna a quantidade de manutenções vencidas por obra.",
        "parameters": [
          {
            "name": "buildingId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna o número de manutenções vencidas encontradas.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "expiredCount": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

    "/maintenances/listexpired/{buildingId}": {
      "get": {
        "tags": ["Manutenções"],
        "summary": "Retorna as manutenções vencidas por obra.",
        "parameters": [
          {
            "name": "buildingId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna as manutenções vencidas encontradas.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "arrumar": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    }
  }
}
