        "responses": {
          "200": {
            "description": "Retorna as categorias encontradas.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "Maintenance": {
                        "type": "array",
                        "items": {
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "MaintenanceHistory": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                },
                                "activity": {
                                  "type": "string"
                                },
                                "frequency": {
                                  "type": "number"
                                },
                                "responsible": {
                                  "type": "string"
                                },
                                "source": {
                                  "type": "string"
                                },
                                "period": {
                                  "type": "number"
                                },
                                "delay": {
                                  "type": "number"
                                },
                                "observation": {
                                  "type": "string"
                                }
