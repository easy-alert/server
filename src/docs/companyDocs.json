    "/maintenances/create": {
      "post": {
        "tags": ["Maintenance"],
        "summary": "Cria uma manutenção em uma categoria.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categoryId": {
                    "type": "string"
                  },

                  "element": {
                    "type": "string",
                    "default": "Ar condicionado, Paredes"
                  },
                  "activity": {
                    "type": "string",
                    "default": "Pintar Paredes"
                  },
                  "frequency": {
                    "type": "number",
                    "default": 3
                  },
                  "frequencyTimeIntervalId": {
                    "type": "string"
                  },
                  "responsible": {
                    "type": "string",
                    "default": "Construtora"
                  },
                  "source": {
                    "type": "string",
                    "default": "NBR 5674:2012;"
                  },
                  "period": {
                    "type": "number",
                    "default": 2
                  },
                  "periodTimeIntervalId": {
                    "type": "string"
                  },
                  "delay": {
                    "type": "number",
                    "default": 3
                  },
                  "delayTimeIntervalId": {
                    "type": "string"
                  },
                  "observation": {
                    "type": "string",
                    "default": "A obra deve ser concluída o mais rapido possível."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

