                  },
                  "password": {
                    "type": "string",
                    "default": 123123123
                  },
                  "image": {
                    "type": "string",
                    "default": "larguei.s3.us-west-2.amazonaws.com/favicon%201-1661888030888.png"
                  },
                  "companyName": {
                    "type": "string",
                    "default": "Ada lovelace"
                  },
                  "CNPJ": {
                    "type": "string",
                    "default": "28060992000161"
                  },
                  "CPF": {
                    "type": "string",
                    "default": "12365172024"
                  },
                  "contactNumber": {
                    "type": "string",
                    "default": "48996345409"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },

