{
  "openapi": "3.0.0",
  "info": {
    "title": "Easy Alert - Client",
    "description": "Api do modulo de empresas.",
    "version": "1.0.0",
    "contact": {
      "email": "produto@adalovelace.com.br",
      "name": "Ada Lovelace"
    }
  },
  "servers": [
    {
      "description": "Local Development",
      "url": "http://localhost:8080/api/client/"
    },
    {
      "description": "//CHANGE HERE",
      "url": "//CHANGE HERE"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "ServerMessage": {
        "description": "Mensagem de erro padrão do backend.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "ServerMessage": {
                  "properties": {
                    "statusCode": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/building/{buildingId}": {
      "get": {
        "tags": ["Calendar"],
        "summary": "Lista todas as manutencoes.",
        "parameters": [
          {
            "name": "buildingId",
            "in": "path",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "year",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],

        "responses": {
          "200": {
            "description": "Lista todas as manutencoes.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },
    "/syndic/{syndicId}": {
      "get": {
        "tags": ["Calendar"],
        "summary": "Lista todas as manutencoes.",
        "parameters": [
          {
            "name": "syndicId",
            "in": "path",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "year",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "month",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],

        "responses": {
          "200": {
            "description": "Lista todas as manutencoes.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },
    "/building/informations/{buildingId}": {
      "get": {
        "tags": ["Calendar"],
        "summary": "Bucas as informações da manutencão.",
        "parameters": [
          {
            "name": "buildingId",
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],

        "responses": {
          "200": {
            "description": "Lista todas as manutencoes.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },
    "/maintenances/create/report": {
      "post": {
        "tags": ["Maintenance"],
        "summary": "reporta uma manutenção.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "maintenanceHistoryId": {
                    "type": "string"
                  },
                  "cost": {
                    "type": "number"
                  },
                  "observation": {
                    "type": "string"
                  },

                  "responsibleSyndicId": {
                    "type": "string"
                  },

                  "ReportAnnexes": {
                    "type": "array",
                    "items": {
                      "properties": {
                        "name": { "type": "string" },
                        "originalName": { "type": "string" },
                        "url": { "type": "string" }
                      }
                    }
                  },
                  "ReportImages": {
                    "type": "array",
                    "items": {
                      "properties": {
                        "name": { "type": "string" },
                        "originalName": { "type": "string" },
                        "url": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },
    "/fixmaintenancesreporthistory": {
      "post": {
        "tags": ["Maintenance"],
        "summary": "teste",
        "responses": {
          "201": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    }
  }
}
