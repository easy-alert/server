{
  "openapi": "3.0.0",
  "info": {
    "title": "Easy Alert - Script",
    "description": "Api do módulo de scripts.",
    "version": "1.0.0",
    "contact": {
      "email": "produto@adalovelace.com.br",
      "name": "Ada Lovelace"
    }
  },
  "servers": [
    {
      "description": "Production",
      "url": "https://easyalert-production.herokuapp.com/api/scripts/"
    },
    {
      "description": "Sandbox",
      "url": "https://easyalert-sandbox.herokuapp.com/api/scripts/"
    }
  ],
  "components": {
    "responses": {
      "ServerMessage": {
        "description": "Mensagem de erro padrão do backend.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "ServerMessage": {
                  "properties": {
                    "statusCode": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/templates/create": {
      "post": {
        "tags": ["Template de manutenções"],
        "summary": "Cria um novo template de manutenção.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "buildingId": { "type": "string" },
                  "templateName": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    },
    "/expired-maintenances/all/{buildingId}": {
      "delete": {
        "tags": ["Manutenções vencidas"],
        "summary": "DELETA TODAS AS MANUTENÇÕES VENCIDAS QUE NÃO PODEM SER CONCLUÍDAS DE UMA EDIFICAÇÃO. AÇÃO IRREVERSÍVEL",
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "path",
            "name": "buildingId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID da edificação"
          }
        ],
        "responses": {}
      }
    },
    "/expired-maintenances/{maintenanceHistoryId}": {
      "delete": {
        "tags": ["Manutenções vencidas"],
        "summary": "DELETA UMA MANUTENÇÃO VENCIDA. AÇÃO IRREVERSÍVEL",
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "path",
            "name": "maintenanceHistoryId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID do histórico da manutenção"
          }
        ],
        "responses": {}
      }
    },
    "/expired-maintenances/update/{maintenanceHistoryId}": {
      "post": {
        "tags": ["Manutenções vencidas"],
        "summary": "ATUALIZA OS DADOS DE UMA MANUTENÇÃO VENCIDA.",
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "path",
            "name": "maintenanceHistoryId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID do histórico da manutenção"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "notificationDate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Data da notificação",
                    "default": "2025-01-01T00:00:00Z"
                  },
                  "dueDate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Data de vencimento",
                    "default": "2025-01-01T00:00:00Z"
                  },
                  "resolutionDate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Data de resolução",
                    "default": "2025-01-01T00:00:00Z"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Manutenção atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ServerMessage": {
                      "type": "object",
                      "properties": {
                        "message": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "401": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    }
  }
}
