{
  "openapi": "3.0.0",
  "info": {
    "title": "Easy Alert - Script",
    "description": "Api do modulo de scripts.",
    "version": "1.0.0",
    "contact": {
      "email": "produto@adalovelace.com.br",
      "name": "Ada Lovelace"
    }
  },
  "servers": [
    {
      "description": "Local Development",
      "url": "http://localhost:8080/api/scripts/"
    },
    {
      "description": "Sandbox",
      "url": "https://easyalert-notifyapi-sandbox.herokuapp.com/api/scripts/"
    },
    {
      "description": "Production",
      "url": "https://easyalert-notifyapi-production.herokuapp.com/api/scripts/"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "ServerMessage": {
        "description": "Mensagem de erro padrão do backend.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "ServerMessage": {
                  "properties": {
                    "statusCode": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/templates/create": {
      "post": {
        "tags": ["Maintenances Template"],
        "summary": "Cria um novo template de manutenção.",

        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "buildingId": { "type": "string" },
                  "templateName": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/ServerMessage"
          },
          "400": {
            "$ref": "#/components/responses/ServerMessage"
          }
        }
      }
    }
  }
}
